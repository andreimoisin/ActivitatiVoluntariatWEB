@page
@model ActivitatiVoluntariatWEB.Pages.Voluntari.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="get">
    <input type="text" name="searchString" placeholder="Caută...">
    <button type="submit">Caută</button>
    <button type="submit" asp-page-handler="SortByNameAsync">Reset</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NumeSortOrder">
                    @Html.DisplayNameFor(model => model.Voluntar[0].NumeComplet)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Voluntar[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Voluntar[0].Telefon)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DepartamentSortOrder">
                    @Html.DisplayNameFor(model => model.Voluntar[0].Departament)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Voluntar) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeComplet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departament.NumeDepartament)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
